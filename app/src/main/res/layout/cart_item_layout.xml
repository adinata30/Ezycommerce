<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginVertical="10dp"
    android:layout_height="wrap_content">

    <ImageView

        android:id="@+id/cart_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_marginLeft="100dp"
        android:layout_width="180dp"
        android:layout_height="100dp">
        <TextView
            android:gravity="center|start"
            android:id="@+id/cart_title"
            android:textSize="12sp"
            android:text="Title"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="33dp"/>
        <TextView
            android:singleLine="true"
            android:gravity="center|start"
            android:id="@+id/cart_desc"
            android:textSize="10sp"
            android:text="Title"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="33dp"/>
        <TextView
            android:gravity="center|start"
            android:id="@+id/cart_price"
            android:textSize="10sp"
            android:text="Title"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="33dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="30dp"
        android:layout_width="85dp"
        android:layout_height="40dp">
        <ImageView
            android:background="@drawable/border"
            android:id="@+id/cart_decrease_icon"
            android:src="@drawable/remove_icon_foreground"
            android:layout_width="25dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/cart_qty"
            android:gravity="center"
            android:text="1 pcs"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_width="35dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:background="@drawable/border"
            android:id="@+id/cart_increase_icon"
            android:src="@drawable/add_icon_foreground"
            android:layout_width="25dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>